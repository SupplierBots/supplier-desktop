{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.tabSize": 2,

  //Hide files and folders which shouldn't be edited
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "v8.log": false,
    "src/react-app-env.d.ts": false,
    "craco.config.js": false,
    "patches": false,
    "resources": false
  },
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "explorerExclude.backup": null
}
