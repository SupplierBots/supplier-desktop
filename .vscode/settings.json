{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.tabSize": 2,

  //Hide files and folders which shouldn't be edited
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "v8.log": true,
    "public": true,
    //"build": true,
    "src/react-app-env.d.ts": true,
    "craco.config.js": true,
    //You can hide these too
    //"node_modules": true,
    //"dist": true,
    "patches": true,
    "resources": true
  },
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
